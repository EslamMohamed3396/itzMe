<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Itzme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="App_Theme" parent="Theme.Itzme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="fontFamily">@font/cairo</item>
        <!--        <item name="android:windowFullscreen">true</item>-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="TextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/gray</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="errorEnabled">true</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_8</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_8</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_8</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_8</item>
    </style>

    <style name="SearchTextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">12sp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_8</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_8</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_8</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_8</item>
    </style>

    <style name="MaterialButtonStyle" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:fontFamily">@font/cairo_bold</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="cornerRadius">@dimen/radius_8</item>

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="FullHeightDialog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetModal</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetModal" parent="Widget.Design.BottomSheet.Modal">
        <item name="shapeAppearance">@style/BottomSheetShapeAppearance</item>
        <item name="behavior_fitToContents">true</item>
        <item name="behavior_skipCollapsed">true</item>
        <!-- Effectively disable STATE_HALF_EXPANDED by having the tray have a minuscule height in this state -->
    </style>

    <style name="BottomSheetShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/radius_16</item>
        <item name="cornerSizeTopRight">@dimen/radius_16</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_round</item>
    </style>
</resources>